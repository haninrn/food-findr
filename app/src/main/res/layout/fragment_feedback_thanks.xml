<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#49A4FF">

    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardThankYou"
        android:layout_width="335dp"
        android:layout_height="681dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- ConstraintLayout for content inside CardView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Thank You Image -->

            <!-- Thank You Text -->

            <ImageView
                android:id="@+id/IVThankYou"
                android:layout_width="271dp"
                android:layout_height="384dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="96dp"
                android:src="@drawable/thank_you"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/BtnBackHomePage"
                android:layout_width="216dp"
                android:layout_height="56dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="88dp"
                android:text="Back to homepage"
                android:textSize="16sp"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IVThankYou" />

            <!-- Subtitle Text -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Back to Homepage Button -->

</androidx.constraintlayout.widget.ConstraintLayout>
